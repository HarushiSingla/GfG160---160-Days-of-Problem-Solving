class Solution {
    int maxProduct(int[] arr) {
        // code here
        int prefix=1;
        int suffix=1;
        int maxi=Integer.MIN_VALUE;
        int n=arr.length;
        for(int i=0;i<arr.length;i++){
            if(prefix==0) prefix=1;
            if(suffix==0) suffix=1;
            prefix*=arr[i];
            suffix*=arr[n-i-1];
            maxi=Math.max(maxi,Math.max(prefix,suffix));
        }
        return maxi;
    }
}
